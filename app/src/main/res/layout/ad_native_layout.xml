<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.nativead.NativeAdView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content">
<LinearLayout
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Ad"
            android:textColor="@color/md_white_1000"
            android:background="@drawable/ad"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginStart="8dp"
            android:id="@+id/ad_advertiser"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/md_grey_300"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:visibility="gone"
            android:id="@+id/ad_icon"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
        <LinearLayout
            android:layout_marginStart="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ad_headline"
                android:text="Head Line for Ads"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/accent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RatingBar
                android:visibility="gone"
                android:id="@+id/ad_start_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/ad_body_text"
                android:textColor="@color/md_black_1000_75"
                android:text="This is the ad body text"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.gms.ads.nativead.MediaView
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/ad_media"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="120dp"/>

        <TextView

            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:id="@+id/ad_btn_call_to_action"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:textAllCaps="true"
            android:text="Abrir"
            android:textSize="12sp"
            android:textColor="@color/md_white_1000"
            android:background="@drawable/button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>

</com.google.android.gms.ads.nativead.NativeAdView>