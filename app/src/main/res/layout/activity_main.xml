<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            android:fitsSystemWindows="true">

            <ImageView
                android:id="@+id/image"
                android:src="@drawable/pic3"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:layout_marginTop="24dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
                    android:descendantFocusability="blocksDescendants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <com.edxavier.wheels_equivalent.RobotoTextView
                        android:text="@string/titulo1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/titulo" />

                    <TextView
                        android:layout_width="match_parent"
                        android:textStyle="italic"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="16dp"
                        android:textSize="11sp"
                        android:text="Introducir medidas del neumático de serie que corresponde a su vehículo, para neumáticos sin perfil indicar 80:"
                        android:layout_height="wrap_content" />


                    <com.edxavier.wheels_equivalent.RobotoTextView
                        android:text="@string/paso1"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/md_green_700"
                        android:id="@+id/subtitulo1" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <com.edxavier.wheels_equivalent.RobotoTextView
                                android:text="@string/ancho"
                                android:textColor="@color/md_green_500"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <Spinner
                                android:spinnerMode="dialog"
                                android:id="@+id/original_ancho"
                                android:entries="@array/ancho_array"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <com.edxavier.wheels_equivalent.RobotoTextView
                                android:text="@string/perfil"
                                android:textColor="@color/md_green_500"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                            <Spinner
                                android:spinnerMode="dialog"
                                android:id="@+id/original_perfil"
                                android:entries="@array/perfil_array"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <com.edxavier.wheels_equivalent.RobotoTextView
                                android:text="@string/diametro"
                                android:textColor="@color/md_green_500"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                            <Spinner
                                android:spinnerMode="dialog"
                                android:id="@+id/original_diametro"
                                android:entries="@array/diametro_array"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </LinearLayout>


                    <com.edxavier.wheels_equivalent.RobotoTextView
                        android:text="@string/paso2"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/md_cyan_700"
                        android:id="@+id/subtitulo2" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <com.edxavier.wheels_equivalent.RobotoTextView
                                android:text="@string/ancho"
                                android:textColor="@color/md_cyan_500"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <Spinner
                                android:spinnerMode="dialog"
                                android:id="@+id/nuevo_ancho"
                                android:entries="@array/ancho_array"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <com.edxavier.wheels_equivalent.RobotoTextView
                                android:text="@string/perfil"
                                android:textColor="@color/md_cyan_500"
                                android:layout_gravity="center"
                                android:layout_margin="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                            <Spinner
                                android:spinnerMode="dialog"
                                android:id="@+id/nuevo_perfil"
                                android:entries="@array/perfil_array"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <com.edxavier.wheels_equivalent.RobotoTextView
                                android:text="@string/diametro"
                                android:layout_gravity="center"
                                android:textColor="@color/md_cyan_500"
                                android:layout_margin="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                            <Spinner
                                android:spinnerMode="dialog"
                                android:id="@+id/nuevo_diametro"
                                android:entries="@array/diametro_array"
                                android:layout_width="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/md_black_1000_25" />

                    <com.edxavier.wheels_equivalent.RobotoTextView
                        android:text="@string/resultados"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:textColor="@color/md_teal_700"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <com.edxavier.wheels_equivalent.RobotoTextView
                                android:text="Diametro total nuevo"
                                android:layout_gravity="center"
                                android:id="@+id/txt_medidas_original"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_margin="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                            <com.edxavier.wheels_equivalent.RobotoTextView
                                android:text="Diametro total original"
                                android:layout_gravity="center"
                                android:id="@+id/txt_diametro_original"
                                android:textStyle="bold"
                                android:layout_margin="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                            <com.edxavier.wheels_equivalent.RobotoTextView
                                android:layout_gravity="center"
                                android:id="@+id/txt_rpm"
                                android:textStyle="bold"
                                android:layout_margin="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_speedometer_52"
                                android:layout_height="match_parent" />

                            <com.edxavier.wheels_equivalent.RobotoTextView
                                android:layout_gravity="center"
                                android:id="@+id/txt_velocidad"
                                android:textStyle="bold"
                                android:layout_margin="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <com.edxavier.wheels_equivalent.RobotoTextView
                                android:text="Diametro total nuevo"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:id="@+id/txt_medidas_nuevo"
                                android:layout_margin="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                            <com.edxavier.wheels_equivalent.RobotoTextView
                                android:text="Diametro total nuevo"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:id="@+id/txt_diametro_nuevo"
                                android:layout_margin="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                            <com.edxavier.wheels_equivalent.RobotoTextView
                                android:layout_gravity="center"
                                android:id="@+id/txt_rpm_new"
                                android:textStyle="bold"
                                android:layout_margin="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_speedometer_52"
                                android:layout_height="match_parent" />

                            <com.edxavier.wheels_equivalent.RobotoTextView
                                android:layout_gravity="center"
                                android:id="@+id/txt_velocidad_new"
                                android:textStyle="bold"
                                android:layout_margin="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </LinearLayout>

                    <com.edxavier.wheels_equivalent.RobotoTextView
                        android:text="El nuevo ne:"
                        android:id="@+id/conclusion"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold|italic"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <com.edxavier.wheels_equivalent.RobotoTextView
                        android:id="@+id/conclusion2"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold|italic"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/md_black_1000_25" />


                    <com.edxavier.wheels_equivalent.RobotoTextView
                        android:text="@string/recuerda"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <com.edxavier.wheels_equivalent.RobotoTextView
                        android:text="@string/recuerda1"
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <include layout="@layout/admob_banner" />


                </LinearLayout>

            </android.support.v7.widget.CardView>


    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        app:layout_anchor="@id/app_bar_layout"
        style="@style/fab"
        app:theme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_anchorGravity="bottom|right|end"
         />



</android.support.design.widget.CoordinatorLayout>